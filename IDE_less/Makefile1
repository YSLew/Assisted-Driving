# the include path /usr/include should already be set

# check /usr/lib/libopencv*.so in case you need more
OPENCV_LIBS = -lopencv_core -lopencv_highgui -lrt -lpthread -lm -ldl

signs: main.cpp Colours.cpp Floating_Average.cpp Geometry.cpp Shapes.cpp
	g++ -o $@ $< -L/usr/lib/  $(OPENCV_LIBS)
	
clean:
	rm *.o main