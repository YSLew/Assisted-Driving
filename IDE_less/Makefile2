
CC=g++
CFLAGS=-c -Wall
LDFLAGS=
SOURCES=main.cpp Colours.cpp Floating_Average.cpp Geometry.cpp Shapes.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=signs
OPENCV_LIBS = -lopencv_core -lopencv_highgui -lopencv_imgproc -lrt -lpthread -lm -ldl

all: $(SOURCES) $(EXECUTABLE)
    
$(EXECUTABLE): $(OBJECTS) 
    $(CC) $(LDFLAGS) $(OBJECTS) -o $@ -L/usr/lib/  $(OPENCV_LIBS)

#old rule for %.cpp:%.o
.cpp.o:
    $(CC) $(CFLAGS) $< -o $@ -L/usr/lib/  $(OPENCV_LIBS)
	
clean:
	rm *.o main	